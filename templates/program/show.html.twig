{% extends 'base.html.twig' %}

{% block title %}Program{% endblock %}

{% block body %}
    <h1>Program</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ program.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ program.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ program.description }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ program.duration }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_program_index') }}">back to list</a>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_program_edit', {'id': program.id}) }}">edit</a>
        {{ include('program/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}