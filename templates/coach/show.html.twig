{% extends 'base.html.twig' %}

{% block title %}Coach{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Coach</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ coach.id }}</td>
                </tr>
                <tr>
                    <th>Prénom</th>
                    <td>{{ coach.firstName }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ coach.lastName }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ coach.email }}</td>
                </tr>
            </tbody>
        </table>

        <a class="btn btn-secondary" href="{{ path('app_coach_index') }}">Retour à la liste</a>

        {% if is_granted('ROLE_ADMIN') %}
            <a class="btn btn-primary" href="{{ path('app_coach_edit', {'id': coach.id}) }}">Modifier</a>
            {{ include('coach/_delete_form.html.twig') }}
        {% endif %}
    </div>
{% endblock %}