{% extends 'base.html.twig' %}

{% block title %}Session{% endblock %}

{% block body %}
    <h1>Session</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ session.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ session.date ? session.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Programme</th>
                <td>{{ session.program.name }}</td>
            </tr>
            <tr>
                <th>Coach</th>
                <td>{{ session.program.coach.firstName }} {{ session.program.coach.lastName }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_session_index') }}">back to list</a>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_session_edit', {'id': session.id}) }}">edit</a>
        {{ include('session/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}